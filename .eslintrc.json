{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "script",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": "airbnb-base",
  "root": true,
  "rules": {
    "indent": ["error", 2],
    "prefer-arrow-callback": ["error", { "allowNamedFunctions": true }],
    "comma-dangle": 0,
    "array-callback-return": 0,
    "consistent-return": 0,
    "import/newline-after-import": 0,
    "no-prototype-builtins": 0,
    "no-mixed-operators": 0,
    "arrow-body-style": 0
  }
}
